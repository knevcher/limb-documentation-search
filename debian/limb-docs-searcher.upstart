description     "Limb documents searcher"
env DEFAULTS="/etc/default/limb-docs-searcher"

env USER=limb
env PORT=9000
env PID="/var/run/limb-docs-searcher/play.pid"

pre-start script
    if [ -f $DEFAULTS ]
    then
        . $DEFAULTS
    fi
    exec su -s /bin/sh -c '/usr/bin/limb-docs-searcher -Dpidfile.path=$PID -Dhttp.port=$PORT' $USER &
end script

post-stop exec kill `cat $PID`
